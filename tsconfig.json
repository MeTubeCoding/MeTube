{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  // a modif : 
  "include": [
    "src",
    "server.js", 
    "setupTests.ts",
    "tailwind.config.js",
    "postcss.config.js",
    "Live.tsx",
    "App.tsx",
    "Chat.tsx",
    "ModerationChat.tsx",
    "Description.tsx",
  ]
  
}